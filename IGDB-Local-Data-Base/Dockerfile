FROM maven:3.9-eclipse-temurin-21 AS builder

ARG APP_DIR=/src

WORKDIR ${APP_DIR}

COPY mvnw .
COPY mvnw.cmd .
COPY pom.xml .

COPY .mvn .mvn
COPY src src

RUN mvn package -Dmaven.test.skip=true

FROM openjdk:21-jdk

ARG APP_DIR2=/JD
WORKDIR ${APP_DIR2}

ENV PORT=8081
ENV SPRING_DATA_MONGODB_URI=
ENV APPLICATION_IGDB_PROXY_URL=
ENV APPLICATION_IGDB_PROXY_API-KEY=
ENV APPLICATION_IGDB_WEBHOOK_BASEURL=
ENV APPLICATION_IGDB_WEBHOOK_SECRET-KEY=

COPY --from=builder /src//target/IGDB-Local-Data-Base-0.0.1-SNAPSHOT.jar IGDB-local-db.jar

EXPOSE ${PORT}

ENTRYPOINT SERVER_PORT=${PORT} java -jar IGDB-local-db.jar